              </div>
            </div>
            
            <div class="lg:w-2/3 p-8 lg:p-12">
              <div class="flex items-center gap-4 mb-6">
                <span class="text-sm text-gray-500 flex items-center">
                  <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                  </svg>
                  {new Date(featuredPost.data.date).toLocaleDateString('en-US', { 
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric' 
                  })}
                </span>
                <span class="text-sm text-primary-600 font-medium bg-primary-50 px-3 py-1 rounded-full">
                  {featuredPost.data.source}
                </span>
              </div>
              
              <h3 class="text-2xl lg:text-3xl font-bold mb-4 text-gray-900 leading-tight">
                <a href={`/blog/${featuredPost.slug}`} class="hover:text-primary-600 transition-colors duration-200">
                  {featuredPost.data.title}
                </a>
              </h3>
              
              <p class="text-gray-600 mb-6 leading-relaxed text-lg">
                {featuredPost.data.description}
              </p>
              
              <div class="flex flex-wrap gap-2 mb-8">
                {featuredPost.data.tags?.map((tag: string) => (
                  <a href={`/tags/${tag}`} class="bg-gray-100 text-gray-700 px-3 py-1 rounded-full text-sm hover:bg-primary-100 hover:text-primary-700 transition-all duration-200">
                    {tag}
                  </a>
                ))}
              </div>
              
              <a href={`/blog/${featuredPost.slug}`} class="inline-flex items-center text-primary-600 hover:text-primary-700 font-semibold group">
                Read full article
                <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          </div>
        </article>
      </div>
    </section>
  )}

  <!-- Latest Posts -->
  <section class="py-16 lg:py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">Latest Articles</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">Stay updated with the latest tech news, insights, and developments</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {currentPosts.map((post) => (
          <article class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 group">
            <!-- Card Header with Gradient -->
            <div class="h-2 bg-gradient-to-r from-primary-500 to-primary-600"></div>
            
            <div class="p-6 lg:p-8">
              <div class="flex items-center justify-between mb-4">
                <span class="text-sm text-gray-500 flex items-center">
                  <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                  </svg>
                  {new Date(post.data.date).toLocaleDateString('en-US', { 
                    month: 'short', 
                    day: 'numeric' 
                  })}
                </span>
                <span class="text-sm text-primary-600 font-medium bg-primary-50 px-3 py-1 rounded-full">
                  {post.data.source}
                </span>
              </div>
              
              <h3 class="text-xl font-bold mb-3 text-gray-900 line-clamp-2 leading-tight group-hover:text-primary-600 transition-colors duration-200">
                <a href={`/blog/${post.slug}`}>
                  {post.data.title}
                </a>
              </h3>
              
              <p class="text-gray-600 mb-6 text-sm line-clamp-3 leading-relaxed">
                {post.data.description}
              </p>
              
              <div class="flex flex-wrap gap-2 mb-6">
                {post.data.tags?.slice(0, 2).map((tag: string) => (
                  <a href={`/tags/${tag}`} class="bg-gray-100 text-gray-700 px-3 py-1 rounded-full text-xs hover:bg-primary-100 hover:text-primary-700 transition-all duration-200">
                    {tag}
                  </a>
                ))}
              </div>
              
              <a href={`/blog/${post.slug}`} class="inline-flex items-center text-primary-600 hover:text-primary-700 font-semibold text-sm group">
                Read article
                <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          </article>
        ))}
      </div>

      <!-- Pagination -->
      {totalPages > 1 && (
        <div class="flex justify-center mt-16">
          <nav class="flex items-center space-x-2 bg-white rounded-2xl shadow-lg p-2">
            {currentPage > 1 && (
              <a href={`/?page=${currentPage - 1}`} class="px-4 py-2 text-gray-600 hover:text-primary-600 hover:bg-primary-50 rounded-xl transition-all duration-200 flex items-center space-x-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                <span>Previous</span>
              </a>
            )}
            
            {Array.from({ length: totalPages }, (_, i) => i + 1).map((page) => (
              <a 
                href={`/?page=${page}`} 
                class={`px-4 py-2 rounded-xl transition-all duration-200 font-medium ${
                  page === currentPage 
                    ? 'bg-primary-600 text-white shadow-md' 
                    : 'text-gray-600 hover:text-primary-600 hover:bg-primary-50'
                }`}
              >
                {page}
              </a>
            ))}
            
            {currentPage < totalPages && (
              <a href={`/?page=${currentPage + 1}`} class="px-4 py-2 text-gray-600 hover:text-primary-600 hover:bg-primary-50 rounded-xl transition-all duration-200 flex items-center space-x-1">
                <span>Next</span>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            )}
          </nav>
        </div>
      )}
    </div>
  </section>

  <!-- Categories Section -->
  <section class="py-16 lg:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">Browse by Category</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">Explore tech news by your interests and stay focused on what matters to you</p>
      </div>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <a href="/tags/tech" class="group bg-white p-8 rounded-2xl shadow-lg text-center hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 border border-gray-100">
          <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
            <span class="text-2xl">ðŸ’»</span>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors duration-200">Tech</h3>
          <p class="text-gray-600 leading-relaxed">Latest technology news, innovations, and industry developments</p>
        </a>
        
        <a href="/tags/ev" class="group bg-white p-8 rounded-2xl shadow-lg text-center hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 border border-gray-100">
          <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-green-600 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
            <span class="text-2xl">ðŸš—</span>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-green-600 transition-colors duration-200">Electric Vehicles</h3>
          <p class="text-gray-600 leading-relaxed">EV industry updates, new models, and sustainable transportation</p>
        </a>
        
        <a href="/tags/crypto" class="group bg-white p-8 rounded-2xl shadow-lg text-center hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 border border-gray-100">
          <div class="w-16 h-16 bg-gradient-to-br from-yellow-500 to-yellow-600 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
            <span class="text-2xl">â‚¿</span>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-yellow-600 transition-colors duration-200">Cryptocurrency</h3>
          <p class="text-gray-600 leading-relaxed">Crypto market news, blockchain developments, and digital finance</p>
        </a>
        
        <a href="/tags/gadgets" class="group bg-white p-8 rounded-2xl shadow-lg text-center hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 border border-gray-100">
          <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-purple-600 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
            <span class="text-2xl">ðŸ“±</span>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-purple-600 transition-colors duration-200">Gadgets</h3>
          <p class="text-gray-600 leading-relaxed">Latest gadget releases, reviews, and consumer electronics news</p>
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  /* Smooth scrolling for better UX */
  html {
    scroll-behavior: smooth;
  }
  
  /* Custom scrollbar for webkit browsers */
  ::-webkit-scrollbar {
    width: 8px;
  }
  
  ::-webkit-scrollbar-track {
    background: #f1f5f9;
  }
  
  ::-webkit-scrollbar-thumb {
    background: #cbd5e1;
    border-radius: 4px;
  }
  
  ::-webkit-scrollbar-thumb:hover {
    background: #94a3b8;
  }
  
  /* Loading animation for better perceived performance */
  .animate-fade-in {
    animation: fadeIn 0.6s ease-out;
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>