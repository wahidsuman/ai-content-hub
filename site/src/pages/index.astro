---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => 
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

const featuredPost = sortedPosts[0];
const recentPosts = sortedPosts.slice(1, 7);
const categories = ['Tech', 'AI', 'Crypto', 'Gadgets', 'EVs', 'Startups'];
---

<Layout title="TechPulse News - Latest Tech News & Updates">
  <div class="min-h-screen bg-gray-50">
    <!-- Hero Header -->
    <header class="bg-gradient-to-r from-blue-900 to-purple-900 text-white">
      <div class="container mx-auto px-4 py-6">
        <nav class="flex justify-between items-center">
          <div class="flex items-center space-x-2">
            <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5z"/>
            </svg>
            <span class="text-2xl font-bold">TechPulse</span>
          </div>
          <div class="hidden md:flex space-x-6">
            {categories.map(cat => (
              <a href={`/tags/${cat.toLowerCase()}`} class="hover:text-blue-200 transition">{cat}</a>
            ))}
          </div>
        </nav>
      </div>
      
      <!-- Hero Section -->
      <div class="container mx-auto px-4 py-12">
        <div class="text-center">
          <h1 class="text-5xl md:text-6xl font-bold mb-4">
            Your Daily Tech News Hub
          </h1>
          <p class="text-xl text-blue-100 mb-8">
            AI-Curated â€¢ Real-Time Updates â€¢ Expert Analysis
          </p>
          <div class="flex justify-center space-x-4">
            <button class="bg-white text-blue-900 px-6 py-3 rounded-full font-semibold hover:bg-blue-50 transition">
              Latest Stories
            </button>
            <button class="border-2 border-white px-6 py-3 rounded-full font-semibold hover:bg-white hover:text-blue-900 transition">
              Subscribe
            </button>
          </div>
        </div>
      </div>
    </header>

    <!-- Breaking News Ticker -->
    <div class="bg-red-600 text-white py-2 overflow-hidden">
      <div class="flex items-center">
        <span class="bg-red-800 px-4 py-1 font-bold">BREAKING</span>
        <div class="marquee ml-4">
          <span>ðŸ”¥ Latest: AI breakthrough in quantum computing â€¢ Tesla announces new model â€¢ Bitcoin hits new milestone â€¢ Apple reveals innovative features</span>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-8">
      <!-- Featured Article -->
      {featuredPost && (
        <div class="mb-12">
          <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
            <div class="md:flex">
              <div class="md:w-3/5">
                <div class="h-96 bg-gradient-to-br from-blue-400 to-purple-600 flex items-center justify-center">
                  <svg class="w-32 h-32 text-white/30" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5z"/>
                  </svg>
                </div>
              </div>
              <div class="md:w-2/5 p-8">
                <div class="flex items-center space-x-2 mb-4">
                  <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-semibold">Featured</span>
                  <span class="text-gray-500 text-sm">{new Date(featuredPost.data.date).toLocaleDateString()}</span>
                </div>
                <h2 class="text-3xl font-bold mb-4 hover:text-blue-600 transition">
                  <a href={`/blog/${featuredPost.slug}`}>{featuredPost.data.title}</a>
                </h2>
                <p class="text-gray-600 mb-6 line-clamp-3">{featuredPost.data.description}</p>
                <a href={`/blog/${featuredPost.slug}`} class="text-blue-600 font-semibold hover:text-blue-800 transition">
                  Read More â†’
                </a>
              </div>
            </div>
          </div>
        </div>
      )}

      <!-- Latest News Grid -->
      <div class="mb-12">
        <div class="flex justify-between items-center mb-6">
          <h2 class="text-3xl font-bold">Latest News</h2>
          <a href="/blog" class="text-blue-600 hover:text-blue-800 transition">View All â†’</a>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {recentPosts.map(post => (
            <article class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1">
              <div class="h-48 bg-gradient-to-br from-blue-400 via-purple-500 to-pink-500 flex items-center justify-center">
                <svg class="w-20 h-20 text-white/30" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5z"/>
                </svg>
              </div>
              <div class="p-6">
                <div class="flex items-center space-x-2 mb-3">
                  <span class="text-xs text-gray-500">{new Date(post.data.date).toLocaleDateString()}</span>
                  {post.data.tags?.[0] && (
                    <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded text-xs font-semibold">{post.data.tags[0]}</span>
                  )}
                </div>
                <h3 class="text-xl font-bold mb-3 hover:text-blue-600 transition line-clamp-2">
                  <a href={`/blog/${post.slug}`}>{post.data.title}</a>
                </h3>
                <p class="text-gray-600 mb-4 line-clamp-3">{post.data.description}</p>
                <a href={`/blog/${post.slug}`} class="text-blue-600 font-semibold hover:text-blue-800 transition inline-flex items-center">
                  Read Article
                  <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              </div>
            </article>
          ))}
        </div>
      </div>

      <!-- Newsletter Section -->
      <div class="bg-gradient-to-r from-blue-600 to-purple-600 rounded-2xl p-8 md:p-12 text-white text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Stay Updated</h2>
        <p class="text-xl mb-8 text-blue-100">Get the latest tech news delivered to your inbox daily</p>
        <div class="max-w-md mx-auto flex flex-col sm:flex-row gap-4">
          <input type="email" placeholder="Enter your email" 
                 class="flex-1 px-6 py-3 rounded-full text-gray-900 focus:outline-none focus:ring-4 focus:ring-blue-300">
          <button class="bg-white text-blue-600 px-8 py-3 rounded-full font-semibold hover:bg-blue-50 transition">
            Subscribe
          </button>
        </div>
      </div>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white mt-16">
      <div class="container mx-auto px-4 py-12">
        <div class="text-center">
          <div class="flex items-center justify-center space-x-2 mb-4">
            <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5z"/>
            </svg>
            <span class="text-2xl font-bold">TechPulse News</span>
          </div>
          <p class="text-gray-400">Your trusted source for the latest technology news</p>
          <p class="text-gray-500 mt-4">&copy; 2024 TechPulse. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </div>
</Layout>

<style>
  @keyframes marquee {
    0% { transform: translateX(100%); }
    100% { transform: translateX(-100%); }
  }
  
  .marquee {
    display: inline-block;
    animation: marquee 30s linear infinite;
    white-space: nowrap;
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>