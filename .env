# Tech News Bot - Environment Configuration
# Copy this file to .env and fill in your actual values

# ==========================================
# TELEGRAM CONFIGURATION
# ==========================================
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Your Telegram chat ID (message @userinfobot to get this)
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ==========================================
# OPENAI CONFIGURATION
# ==========================================
# OpenAI API key from https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key_here

# ==========================================
# GITHUB CONFIGURATION
# ==========================================
# GitHub personal access token with repo permissions
GITHUB_TOKEN=your_github_token_here

# GitHub repository in format: username/repo-name
GITHUB_REPO=your_username/your_repo_name

# ==========================================
# CLOUDFLARE CONFIGURATION
# ==========================================
# Cloudflare account ID (from dashboard)
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id

# Cloudflare KV namespace ID (create with: wrangler kv:namespace create "NEWS_KV")
CLOUDFLARE_KV_NAMESPACE_ID=your_kv_namespace_id

# ==========================================
# SITE CONFIGURATION
# ==========================================
# Your website domain (without https://)
SITE_DOMAIN=your-domain.com

# Google AdSense Publisher ID (optional, for monetization)
ADSENSE_PUBLISHER_ID=your_adsense_publisher_id

# ==========================================
# OPTIMIZATION SETTINGS
# ==========================================
# Maximum posts to generate per batch (recommended: 5-10)
MAX_POSTS_PER_BATCH=10

# Hours between cron runs (recommended: 2)
CRON_INTERVAL_HOURS=2

# OpenAI model to use (gpt-4o-mini recommended for cost optimization)
OPENAI_MODEL=gpt-4o-mini